package com.fintech.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import com.fintech.util.DatabaseConnection;

public class FintechDAO {

    // Método para inserir um novo cliente
    public void insertCliente(String nome, String endereco, String email, String telefone) throws SQLException {
        String sql = "INSERT INTO CLIENTE (nm_cliente, ds_endereco, ds_email, nr_telefone) VALUES (?, ?, ?, ?)";
        try (Connection conn = DatabaseConnection.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setString(1, nome);
            pstmt.setString(2, endereco);
            pstmt.setString(3, email);
            pstmt.setString(4, telefone);
            pstmt.executeUpdate();
        } catch (SQLException e) {
            System.err.println("Erro ao inserir cliente: " + e.getMessage());
            // Re-lança a exceção para permitir que o chamador lide com ela
            throw e;
        }
    }

    // Método para recuperar todos os clientes
    public ResultSet getAllClientes() throws SQLException {
        String sql = "SELECT * FROM CLIENTE";
        try (Connection conn = DatabaseConnection.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            return pstmt.executeQuery();
        } catch (SQLException e) {
            System.err.println("Erro ao buscar clientes: " + e.getMessage());
            // Re-lança a exceção para permitir que o chamador lide com ela
            throw e;
        }
    }
}
