CONSULTAS:

-- Consultar os dados de um usuário (filtrar a par�r do seu código)
SELECT * FROM CLIENTE WHERE id_cliente = idCliente;
-- Consultar os dados de um único registro de despesa de um usuário (filtrar a par�r 
do código do usuário e do código da despesa)
SELECT * FROM DESPESAS WHERE CLIENTE_id_cliente = idCliente AND id_despesa = 
idDespesa;

-- Consultar os dados de todos os registros de despesas de um usuário, ordenando-os 
dos registros mais recentes para os mais an�gos (filtrar a par�r do seu código)
SELECT * FROM DESPESAS WHERE CLIENTE_id_cliente = idCliente ORDER BY 
dt_despesa DESC;

-- Consultar os dados de um único registro de inves�mento de um usuário (filtrar a 
par�r do código do usuário e do código de inves�mento)
SELECT * FROM INVESTIMENTOS WHERE CLIENTE_id_cliente = idCliente AND 
id_inves�mento = idInves�mento;
-- Consultar os dados de todos os registros de inves�mentos de um usuário, 
ordenando-os dos registros mais recentes para os mais an�gos (filtrar a par�r do seu 
código)
SELECT * FROM INVESTIMENTOS WHERE CLIENTE_id_cliente = idCliente ORDER BY 
dt_aplicacao DESC;
-- Consultar os dados básicos de um usuário, o úl�mo inves�mento registrado e a 
úl�ma despesa registrada (filtrar a par�r do código de usuário – consulta necessária 
para o dashboard)

SELECT 
 c.*,
 i.ds_�po AS ul�mo_�po_investimento,
 d.ds_categoria AS ul�ma_categoria_despesa
FROM CLIENTE c

LEFT JOIN (
 SELECT CLIENTE_id_cliente, ds_�po
 FROM INVESTIMENTOS
 WHERE CLIENTE_id_cliente = c.id_cliente
 ORDER BY dt_aplicacao DESC
 FETCH FIRST ROW ONLY
) i ON c.id_cliente = i.CLIENTE_id_cliente
LEFT JOIN (
 SELECT CLIENTE_id_cliente, ds_categoria
 FROM DESPESAS
 WHERE CLIENTE_id_cliente = c.id_cliente
 ORDER BY dt_despesa DESC
 FETCH FIRST ROW ONLY
) d ON c.id_cliente = d.CLIENTE_id_cliente
WHERE c.id_cliente = idCliente;
